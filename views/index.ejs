<!DOCTYPE html>
<html lang="en">

<head>
  <title>Home Page</title>

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />

  <link rel="stylesheet" href="/styles/index.css" type="text/css" />

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

  <script src="https://kit.fontawesome.com/21f7aaf469.js" crossorigin="anonymous"></script>

  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>
</head>

<body>
  <header>
    <nav>
      <ul>
        <li><img id='logo' src="/docs/logo.png" alt="logo" /></li>
        <li><a href="#">Menu</a></li>
        <li><a href="#">About us</a></li>

        <li class='logout'><a href="#">Hi name</a><a href="#">Logout</a></li>
      </ul>
    </nav>
  </header>
  <main>
    <section class="aboutUs">
      <h4>Where magic tasting pizza is created</h4>
    </section>
    <div class="container">
      <div class="row">


        <% for(const item of menus) { %>
          <div class="item col-sm-6">
            <section class="menu">
              <img class='thumbnail' src="<%= item.thumbnail_url %>" alt="">
              <div class='description'>
                <%= item.description %>
                  <p class='price'>
                    <%= item.price %>
                  </p>
              </div>
            </section>
          </div>
          <% } %>
      </div>
    </div>
    <section class='footer'>
      <footer>
        <div class='address'>
          <p>2022 Lighthouse Street, Toronto, Canada</p>
          <p>416-988-2431</p>
        </div>

        <div class='icons'>
          <h4>Follow us on social Media</h4>
          <i class="fab fa-facebook"></i>
          <i class="fab fa-twitter"></i>
          <i class="fab fa-instagram"></i>
        </div>
      </footer>
    </section>
  </main>

</body>

</html>
